{
    "training_scheme": "auto_regressive",
    "random_seed": 42,
    "batch_size": 32,
    "num_epochs": 40,
    "num_train_iterations": 1000,
    "num_eval_iterations": 200,
    "seq_length": 10,
    "checkpoint_frequency": 5,
    "model": {
        "type": "st_transformer",
        "num_blocks": 8,
        "input_dropout": 0.1,
        "embedding_dim": 64,
        "positional_encoding": {
            "type": "sin"
        },
        "transformer": {
            "type": "parallel",
            "spatial_heads": 4,
            "temporal_heads": 4,
            "spatial_dropout": 0.1,
            "temporal_dropout": 0.1,
            "ff_dimension": 128,
            "ff_dropout": 0.1,
            "input_dropout": 0.1
        }
    },
    "optimizer": {
        "type": "Adam",
        "learning_rate": 0.001,
        "betas": [
            0.9,
            0.98
        ],
        "epsilon": 1e-08
    },
    "loss": {
        "type": "position_mse",
        "reduction": "mean"
    },
    "lr_scheduler": {
        "type": "exponential",
        "gamma": 0.9,
        "warmup": 1000,
        "update_frequency": 1000,
        "base_lr": 5e-05
    },
    "skeleton": {
        "type": "s16",
        "num_joints": 16
    },
    "joint_representation": {
        "type": "pos",
        "absolute": true,
        "joint_dim": 3
    },
    "evaluation": {
        "metrics": ["positional_mse", "auc"],
        "frequency": 1,
        "exhaustive_evaluation": true,
        "timesteps": [80,120,160,200,240,280,320]
    },
    "dataset": {
        "name": "h36m",
        "seed_length": 10,
        "target_length": 10,
        "downsampling_factor": 2,
        "spacing": 5,
        "training_size": 1000,
        "validation_size": 1000,
        "test_size": 1000,
        "reverse_prob": 0.5
    },
    "data_augmentation": {
        "normalize": true,
        "reverse_prob": 0.0,
        "snp_noise_prob": 0.0,
        "joint_cutout_prob": 0.0,
        "timestep_cutout_prob": 0.0   
    }

}
