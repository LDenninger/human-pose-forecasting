{
    "training_scheme": "single_step",
    "random_seed": 42,
    "batch_size": 32,
    "num_epochs": 20,
    "num_train_iterations": 1000,
    "num_eval_iterations": 200,
    "seq_length": 75,
    "checkpoint_frequency": 1,
    "model": {
        "type": "st_transformer",
        "num_blocks": 8,
        "input_dropout": 0.1,
        "embedding_dim": 64,
        "positional_encoding": {
            "type": "sin"
        },
        "transformer": {
            "type": "parallel",
            "spatial_heads": 4,
            "temporal_heads": 4,
            "spatial_dropout": 0.1,
            "temporal_dropout": 0.1,
            "ff_dimension": 128,
            "ff_dropout": 0.1,
            "input_dropout": 0.1
        }
    },
    "optimizer": {
        "type": "Adam",
        "learning_rate": 0.001,
        "betas": [
            0.9,
            0.98
        ],
        "epsilon": 1e-08
    },
    "loss": {
        "type": "mse"
    },
    "lr_scheduler": {
        "type": "baseline",
        "warmup": 100000
    },
    "skeleton": {
        "type": "s26",
        "num_joints": 26
    },
    "joint_representation": {
        "type": "mat",
        "joint_dim": 9
    },
    "evaluation": {
        "metrics": ["geodesic_distance", "positional_mse", "euler_angle", "auc"],
        "distribution_metrics": ["ps_entropy", "ps_kld", "npss"],
        "frequency": 1,
        "exhaustive_evaluation": true,
        "timesteps": [100,200,300,400]
    },
    "dataset": {
        "name": "h36m",
        "seed_length": 40,
        "target_length": 10,
        "downsampling_factor": 1,
        "spacing": 0,
        "training_size": 1000,
        "validation_size": 1000,
        "test_size": 1000,
        "reverse_prob": 0.0
    },
    "data_augmentation": {
        "normalize": true,
        "reverse_prob": 0.5,
        "snp_noise_prob": 0.0,
        "joint_cutout_prob": 0.0,
        "timestep_cutout_prob": 0.0   
    }

}
